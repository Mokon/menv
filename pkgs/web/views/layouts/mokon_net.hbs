    function checkLoginState() {
      var session_access_token = '{{access_token}}';

      if (session_access_token == 0) {
        FB.getLoginStatus(function(response) {
          if (response.status == 'connected' && session_access_token != response.authResponse.accessToken.toString()) {
            if (!window.location.pathname.startsWith("/login/")) {
              console.log(response.authResponse.accessToken)
              console.log(response)
              console.log(session_access_token)
              window.location = "/login/" + response.authResponse.accessToken;
            }
          } else {
            console.log("doing login")
            FB.login();
          }
        });
      }
    }

