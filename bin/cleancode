#!/bin/bash
# (C) 2015 David 'Mokon' Bond, All Rights Reserved
files=`find . -name "*.[ch]pp"`

uc_dir=uncrustify_out

mkdir -p $uc_dir

counter=0
for item in $files ; do
  dn=$(dirname $item)
  mkdir -p $uc_dir/$dn
  uncrustify -f $item -c $menv_local_dir/uncrustify.cfg > $uc_dir/$item
  if ! diff -q $item $uc_dir/$item > /dev/null ; then
    xxdiff $item $uc_dir/$item
    #cp $uc_dir/$item $item
  else
    echo "Files do not diff."
  fi  
  counter=$((counter+1))

  if [[ "$counter" -gt 100 ]]; then
    break
  fi  
done

rm -r $uc_dir
