function s:CommonFormatting()
  if @% != "*log*"
    " Color anything over 80 chars red.
    highlight ColorColumn ctermbg=lightgrey guibg=lightgrey
    highlight OverLength ctermbg=red ctermfg=white guibg=#592929
    match OverLength /\%81v.\+/
  endif
endfunction

