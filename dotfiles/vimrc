function! LogFormating()
  :call ToggleForCopy()
  :set cursorline! cursorcolumn!
  :match
endfunction

function! ToggleForCopy()
  :NumbersToggle
  :set nonumber
  :GitGutterToggle
  if exists('+colorcolumn')
    if &colorcolumn != 0
      set colorcolumn=
    else
      set colorcolumn=80
    endif
  endif
endfunction

