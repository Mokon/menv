[credential]
	helper = cache --timeout 3600
[alias]
	squash = !"f() { NL=$1; GIT_EDITOR=\"sed -i '2,$NL s/pick/squash/;/# This is the 2nd commit message:/,$ {d}'\"; git rebase -i HEAD~$NL; }; f"
	prstash = "!f() { git fetch $1 refs/pull-requests/$2/from:$3; } ; f"
	gdiff = "difftool -t meld -y"
	tduff = "difftool --extcmd='colordiff -ydw --suppress-common-lines -C 10' -y "
	wdiff = "diff --color-words"
	whitespaceerrors = "diff-index --check --cached HEAD"
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
[diff]
	ignoreSubmodules = dirty
	renames = true
	renameLimit = 99999
	tool = meld
	guitool = meld
[merge]
	tool = meld
[mergetool "bettermeld"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[pager]
	difftool = true
[rerere]
	enabled = true
