# Terminal colors, assuming 256 colors.
TC_RESET="[0m"
TC_SKY="[0;37;44m"
TC_GRD="[0;30;42m"
TC_TEXT="[38;5;203m"

echo -n "${TC_SKY}
              ( \`   )_                                                         |
             (    )    \`)                                                      |
           (_   (_ .  _) _)                                                    |
                                          _                                    |
                                         (  )                                  |
          _ .                         ( \`  ) . )                               |
        (  _ )_                      (_, _(  ,_)_)                             |
      (_  _(_ ,)                                                               |
                                                                               |
${TC_TEXT}[44m                ##     ##  #######  ##    ##  #######  ##    ##                |
                ###   ### ##     ## ##   ##  ##     ## ###   ##                |
                #### #### ##     ## ##  ##   ##     ## ####  ##                |
                ## ### ## ##     ## #####    ##     ## ## ## ##                |
                ##     ## ##     ## ##  ##   ##     ## ##  ####                |
                ##     ## ##     ## ##   ##  ##     ## ##   ###                |
                ##     ##  #######  ##    ##  #######  ##    ##                |
${TC_SKY}                                                                               |
               _  _                                                            |
              ( \`   )_                                                         |
             (    )    \`)                                                      |
           (_   (_ .  _) _)                                                    |
                                                        (  )                   |
                      _, _ .                         ( \`  ) . )                |
                     ( (  _ )_                      (_, _(  ,_)_)              |
                   (_(_  _(_ ,)                                                |
                                                                               |
${TC_GRD}"

echo -e "\n                           Welcome to Mokon's Linux!                           \n"

echo -n "${TC_GRD}"
nodeinfo
echo ${TC_RESET}

