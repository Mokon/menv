#!/bin/bash
# (C) 2013 David 'Mokon' Bond, All Rights Reserved

pushd . &> /dev/null

cd ~

file=`/bin/mktemp`
wget -O $file -q -N --no-check-certificate \
  https://github.com/mokon/menv/archive/master.tar.gz
    
/bin/tar -xzf $file
/bin/rm -f $file
/bin/mv menv-master menv

source ~/menv/core/install

source ~/.bash_profile

popd &> /dev/null

